generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id          String   @id @default(uuid())
  amount      Float
  type        String   // "income" or "expense"
  category    String
  date        DateTime
  description String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model Category {
  id        String   @id @default(uuid())
  name      String
  type      String   // "income" or "expense"
  color     String
  icon      String?
  subCategories String[]
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}
